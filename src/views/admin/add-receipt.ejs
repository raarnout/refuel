<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main id="add-receipt">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
            
                <form action="add-receipt" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Trip Distance</label>
                        <input type="text" name="tripDistance" id="tripDistance" required="yes" pattern="(?:\+|\-|\$)?\d{1,}(?:\,?\d{3})*(?:\.\d+)?%?" autocomplete="off" oninvalid="setCustomValidity('Alleen nummers zijn toegestaan.')" class="form-control" aria-describedby="emailHelp" placeholder="Distance in km.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Volume</label>
                        <input type="text" name="totalLiters" id="totalLiters" required="yes" pattern="(?:\+|\-|\$)?\d{1,}(?:\,?\d{3})*(?:\.\d+)?%?" autocomplete="off" oninvalid="setCustomValidity('Alleen nummers zijn toegestaan.')" class="form-control" placeholder="In l.">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Price/Unit</label>
                        <input type="text" name="pricePerLiter" id="pricePerLiter" required="yes" pattern="(?:\+|\-|\$)?\d{1,}(?:\,?\d{3})*(?:\.\d+)?%?" autocomplete="off" oninvalid="setCustomValidity('Alleen nummers zijn toegestaan.')" class="form-control" placeholder="In Euro">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
</div>
            </div>
        </div>
    </main>

<%- include('../includes/end.ejs') %>