<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/receipt-form.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="receipt-form" action="add-receipt" method="POST">
            <div class="form-control">
                <label>Ritafstand in kilometers:</label>
                <input type="text" name="tripDistance" id="tripDistance" required="yes" pattern="(?:\+|\-|\$)?\d{1,}(?:\,?\d{3})*(?:\.\d+)?%?" autocomplete="off" oninvalid="setCustomValidity('Alleen nummers zijn toegestaan.')">
            </div>

            <div class="form-control">
                <label>Getankt volume in liters:</label>
                <input type="text" name="totalLiters" id="totalLiters" required="yes" pattern="(?:\+|\-|\$)?\d{1,}(?:\,?\d{3})*(?:\.\d+)?%?" autocomplete="off" oninvalid="setCustomValidity('Alleen nummers zijn toegestaan.')">
            </div>

            <div class="form-control">
                <label>Prijs per liter in euro's:</label>
                <input type="text" name="pricePerLiter" id="pricePerLiter" required="yes" pattern="(?:\+|\-|\$)?\d{1,}(?:\,?\d{3})*(?:\.\d+)?%?" autocomplete="off" oninvalid="setCustomValidity('Alleen nummers zijn toegestaan.')">
            </div>
            
            <button type="submit">Bon Toevoegen</button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>