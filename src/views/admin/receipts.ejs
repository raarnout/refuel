<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <div class="container table-responsive">
          <% if(receipts.length > 0) { %>
            <table class="table table-bordered table-striped text-center">
              <thead>
                <tr>
                  <th>Ritafstand (km.)</th>
                  <th class="d-none d-sm-table-cell">Volume (l.)</th>
                  <th class="d-none d-sm-table-cell">Prijs/eenheid (â‚¬)</th>
                  <th>Datum</th>
                </tr>
              </thead>
              <tbody>
                <% for (let receipt of receipts) { %>
                  <tr>
                    <td><%= receipt.tripDistance %></td>
                    <td class="d-none d-sm-table-cell"><%= receipt.totalLiters %></td>
                    <td class="d-none d-sm-table-cell"><%= receipt.pricePerLiter %></td>
                    <td><%= receipt.date %></td>
                    <td>
                        <form action="/admin/edit-receipt" method="POST">
                          <button class="fa fa-edit border-0 bg-transparent text-primary" type="submit"></button>
                        </form>
                      </td>
                    <td>
                      <form action="/admin/delete-receipt" method="POST">
                        <button class="fa fa-remove border-0 bg-transparent text-danger" type="submit"></button>
                      </form>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          <% } else { %>
              <h1>No receipts found</h1>
          <% } %>
          </div>
    </main>
  
<%- include('../includes/end.ejs') %>